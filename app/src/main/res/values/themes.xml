<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.TemuCafe" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Tema utama TemuCafe -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/bg</item> <!-- Menggunakan warna background yang lebih terang -->
        <item name="android:fontFamily">@font/montserrat_regular</item> <!-- Menggunakan font regular sebagai default -->
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <!-- Tema untuk Splash Screen -->
    <style name="Theme.TemuCafe.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/coffee_gradient_bg</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- New: Text appearance for bold text -->
    <style name="TextAppearance.TemuCafe.Bold" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- New: Text appearance for regular text -->
    <style name="TextAppearance.TemuCafe.Regular" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>
</resources>
